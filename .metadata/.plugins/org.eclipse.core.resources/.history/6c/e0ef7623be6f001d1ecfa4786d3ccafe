
package servlets;

import java.io.IOException;
import java.io.PrintWriter;
import java.io.UnsupportedEncodingException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet(name="ServletLeeDatos", urlPatterns = {"/ServletLeeDatos"})
public class ServletLeeDatos extends HttpServlet{  
    /**
	 * 
	 */
	private static final long serialVersionUID = 1L;

	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws IOException{
        //Obtener datos del formulario
        request.setCharacterEncoding("utf-8");
        Integer celsius = Integer.parseInt(request.getParameter("celsius"));
        Integer fahrenheit = Integer.parseInt(request.getParameter("fahrenheit")); 
        
        //Crear respuesta
        response.setContentType("text/html;charset=UTF-8");
        PrintWriter out = response.getWriter();
        try {
            out.println("<html>");
            out.println("<head><title>Servlet que procesa un formulario basico</title></head>");
            out.println("<body>");
            out.println("<h1>Resultado de la conversion:</h1>"); 
            out.println("<p>Este formulario ha sido invocado con los siguientes parametros:</p>");
            out.println(request.getQueryString());
            out.println("</body>");
            out.println("</html>");
        } finally {
        }
    }
}
